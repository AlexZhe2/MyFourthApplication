<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/my_color_background"
    >
    <!-- ^ background можно задать потом из стилей ^ -->


    <LinearLayout
        android:id="@+id/Linear_Layout_01"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">


        <ImageButton
            android:id="@+id/ImageButton_xml_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            app:srcCompat="@drawable/ic_image_01"
           />

        <ImageButton
            android:id="@+id/ImageButton_xml_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            app:srcCompat="@drawable/ic_image_02"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#eeeeee"
            android:text=""
            android:layout_weight="4"
            />


        <ImageButton
            android:id="@+id/ImageButton_xml_03"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            app:srcCompat="@drawable/ic_image_03"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Linear_Layout_01"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#eeeeee"
            android:text=""
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_image_04"
            android:scaleType="fitXY"
            android:layout_weight="9"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#eeeeee"
            android:text=""
            android:layout_weight="1"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>